source ~/.mutt/colors.tommorownight

set mbox_type   = Maildir
set sendmail    = /usr/bin/msmtp

# Multiple mailboxes
macro index <f2> '<sync-mailbox><enter-command>source ~/.mutt/account.gmail<enter><change-folder>!<enter>'
# Default box
source ~/.mutt/account.gmail

macro index E "<change-folder>+archive<enter><limit>~B " "search everything"
macro index,pager A "<save-message>+archive<enter>" "move message to the archive"
macro index,pager I "<save-message>+INBOX<enter>" "move message to the archive"
macro index D "<save-message>+trash<enter>" "move message to the trash"
macro index S "<save-message>+spam<enter>" "mark message as spam"

unset mark_old

# view html
auto_view text/html                                      # view html automatically
alternative_order text/plain text/enriched text/html     # save html for last

# drop idiotic confirmations
set delete
unset confirmappend

# sorting
set sort     = threads
set sort_aux = reverse-last-date-received
set sort_re
