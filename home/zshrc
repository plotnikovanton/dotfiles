    #vpn_name="${file%.conf}"
    #alias vpn-${vpn_name}="sudo systemctl start openvpn-client@$vpn_name"
    #alias vpn-${vpn_name}-status="systemctl status openvpn-client@$vpn_name"
    #alias vpn-${vpn_name}-stop="sudo systemctl stop openvpn-client@$vpn_name"
#done

# Aliaces
alias winmv='convmv -f cp1252 -t cp850 * --notest  && convmv -f cp866 -t utf-8 * --notest'
alias sup='rvm 2.3.3 do sup' # sup mua
alias def='dict -d gcide'

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

